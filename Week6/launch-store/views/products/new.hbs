<h1 id="welcome-header">New Products</h1>
<p><a href="/products">Return</a> to the products page</p>
<table>
  <form action="/products" method="POST">
    <tr>
      <td><label for="name">Name:</td>
      <td><input type="text" id="name" name="name"></label></td>
    </tr>
    <tr>
      <td><label for="description">Description:</td>
      <td><input type="text" id="description" name="description"></label></td>
    </tr>
    <tr>
      <td><label for="price">Price:</td>
      <td><input type="number" step=".01" id="price" name="price"></label></td>
    </tr>
    <tr>
      <td><label for="featured">Featured?<input type="checkbox" id="featured" name="featured"></label></td>
    </tr>
    <tr>
      <td><input type="submit" value="Submit"></td>
    </tr>
  </form>
</table>